{
  "configuration": {
    "name": "Default",
    "properties": {
      "property": [
        {
          "name": "log-path",
          "value": "logs"
        },
        {
          "name": "archive",
          "value": "${log-path}/archive"
        }
      ]
    },
    "appenders": {
      "Console": {
        "name": "Console-Appender",
        "target": "SYSTEM_OUT",
        "JsonLayout": {
          "complete" : true
        }
      },
      "File": {
        "name": "File-Appender",
        "fileName": "${log-path}/logfile.log",
        "JsonLayout": {
          "complete": true
        }
      },
      "RollingFile": {
        "name": "RollingFile-Appender",
        "fileName": "${log-path}/rollingfile.log",
        "filePattern": "${archive}/rollingfile.log.%d{yyyy-MM-dd-hh-mm}.gz",
        "JsonLayout": {
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size": "1 KB"
          }
        },
        "DefaultRolloverStrategy": {
          "max": "30"
        }
      }
    },
    "loggers": {
      "logger": {
        "name": "io.slixes.showcase",
        "level": "debug",
        "additivity": "false",
        "appender-ref": [
          {
            "ref": "Console-Appender",
            "level": "info"
          },
          {
            "ref": "File-Appender",
            "level": "error"
          },
          {
            "ref": "RollingFile-Appender",
            "level": "debug"
          }
        ]
      },
      "root": {
        "level": "debug",
        "appender-ref": {
          "ref": "Console-Appender"
        }
      }
    }
  }
}
